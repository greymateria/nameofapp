<div class="container-fluid anchor" id="product-columns">
  <div class="row" data-product-id="<%= @product.id %>">

    <div class="col-xs-12 col-sm-4 col-md-6 product_image_box">
      <%= link_to image_tag(@product.image_url, data_zoom_image: @product.image_url, class: "img-responsive img-zoom"), @product %>     
    </div><!-- /.product_image_box -->

    <div class="col-xs-12 col-sm-8 col-md-6 product_info_box">
    <% cache @product do %>
      <div id="productName">
        <h2><%= @product.name %></h2>   
      </div>

      <div class="row"><!-- row level 2 -->
        <div class="col-xs-12 col-sm-6 col-md-6">


          <div id="productPrice">
            <h4>Price: <%= @product.price %></h4>
          </div>


          <p><strong>Average Rating: </strong><div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>

          <p><strong>Colour: </strong><%= @product.colour %></p>


          <p><strong>Description: </strong><%= @product.description %></p>
          <% end %>
          <%= form_tag "/payments/create" do %>
            <%= render partial: "shared/stripe_checkout_button" %>
            <%= hidden_field_tag(:product_id, @product.id) %>
    <% end %>
        </div>  
