<!DOCTYPE html>
<html>
  <head>
    <title>Nameofapp</title>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

		<meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>
  </head>

	<body>
		<!-- navbar starts here -->
		<nav class="navbar navbar-fixed-top" role="navigation">
	  	<div class="container-fluid">
	  		<!-- this is the "hamburger" navbar -->
	  		<div class="navbar-header">
	  			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				    <span class="sr-only">Toggle navigation</span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				    <span class="icon-bar"></span>
				  </button> 	

					<div class="projectName navbar-brand">
						<%= link_to "Brand Name", root_path %>
					</div><!-- end projectName -->						
	  		</div><!-- end navbar-header -->

	  		<!-- this is the standard navbar -->
	  		<div class="navbar-collapse collapse">
					<ul class="nav navbar-nav navbar-right" id="rightul">
						<li><%= link_to "Shop", products_path %></li>
						<li><%= link_to "About", static_pages_about_path %></li>
						<li><%= link_to "Contact", static_pages_contact_path %></li>
					</ul><!-- / .navbar-collapse collapse -->

					<ul class="nav pull-right">
					  <li>
					  <% if user_signed_in? %>
					    <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
					  <% else %>
					    <%= link_to('Login', new_user_session_path) %>
					  <% end %>
					  </li>
					</ul><!-- / .nav pull-right -->			

				<!-- search bar-->
			  <%= form_tag("/products", method: "get", class: "navbar-form navbar-left") do %>
			  	<div class="form-group">
					  <%= text_field_tag(:q, nil, class: "form-control", id: "nav-form-control", placeholder: "") %>
					</div>
					  <%= submit_tag("Search", class: "btn btn-default", id: "nav-search-btn") %>
				<% end %>

				</div><!-- end navbar-collapse collapse -->	

	  	</div><!-- end nav container-fluid -->
	  	</div><!-- end .container-fluid -->
		</nav> <!-- end navbar-->

		<!-- Devise gem: flash messages to display a welcome message when you sign in -->
		<% if notice %>
			<div id="notice" class="alert alert-info" role="alert"><%= notice %></div>
		<% end %>	

		<% if alert %>
		<div class="alert alert-danger" role="alert"><%= alert %></div>
		<% end %>


		<!-- where the view files are rendered inside the layout -->
    <%= yield %>

    <br>
		<%= link_to "Click for redirect_to :back", @some_action %>

		<footer>
		  &copy; 2016 Brand Name
		</footer>

		<!-- ============================= -->
		<!-- All your JavaScript comes now -->
		<!-- ============================= -->

		<!-- jQuery -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<script src="app/assets/javascripts/alerts.js"></script>

		<!-- Bootstrap core JS -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>	

  </body>
</html>
